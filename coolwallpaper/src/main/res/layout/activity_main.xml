<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <include
        android:id="@+id/i_main"
        layout="@layout/layout_head" />
    <!--<include layout="@layout/layout_actionbar"/>-->

    <FrameLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/home_head_dream"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_head_dream_img"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:tint="@color/orange"
                android:src="@mipmap/bottom_home_normal"/>

            <TextView
                android:id="@+id/home_head_dream_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/orange"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_sort_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_sort_icon"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/ic_sort"/>

            <TextView
                android:id="@+id/home_sort_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="分类"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_constellation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_constellation_img"
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:src="@mipmap/bottom_notice_normal"/>

            <TextView
                android:id="@+id/home_constellation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/home_tuijian_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_tuijian_img"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/ic_tuijian"/>
            <TextView
                android:id="@+id/home_tuijian_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="推荐"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/home_head_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_head_news_img"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/bottom_me_normal"/>

            <TextView
                android:id="@+id/home_head_news_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
